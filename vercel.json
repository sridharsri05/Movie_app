{
  "version": 2,
  "routes": [
    {
      "src": "/login",
      "dest": "/index.html"
    },
    {
      "src": "/signup",
      "dest": "/index.html"
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/admindashboard/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/unauthorized",
      "dest": "/index.html"
    },
    {
      "src": "/dashboard/?(.*)",  // Add optional trailing slash
      "dest": "/index.html"
    },
    {
      "src": "/admindashboard/?(.*)",  // Add optional trailing slash
      "dest": "/index.html"
    }
  ]
}
